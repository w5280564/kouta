<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/discover_Txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:gravity="center"
        android:text="发现"
        android:textColor="@color/blacktitle"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/my_Scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discover_Txt">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/greyfive">


            <com.xunda.mo.main.baseView.MyArrowItemView
                android:id="@+id/item_welfare_set"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:arrowItemAvatarHeight="25dp"
                app:arrowItemAvatarSrc="@mipmap/welfare_icon"
                app:arrowItemAvatarWidth="25dp"
                app:arrowItemShowAvatar="true"
                app:arrowItemTitle="领福利"
                app:arrowItemTitleColor="@color/blacktitlettwo"
                app:arrowItemTitleSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="10dp" />

            <com.xunda.mo.main.baseView.MyArrowItemView
                android:id="@+id/item_invite_set"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:arrowItemAvatarHeight="25dp"
                app:arrowItemAvatarSrc="@mipmap/invite_icon"
                app:arrowItemAvatarWidth="25dp"
                app:arrowItemShowAvatar="true"
                app:arrowItemTitle="邀新有奖"
                app:arrowItemTitleColor="@color/blacktitlettwo"
                app:arrowItemTitleSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_welfare_set" />

            <com.xunda.mo.main.baseView.MyArrowItemView
                android:id="@+id/item_search_set"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:arrowItemAvatarHeight="25dp"
                app:arrowItemAvatarSrc="@mipmap/search_icon"
                app:arrowItemAvatarWidth="25dp"
                app:arrowItemShowAvatar="true"
                app:arrowItemTitle="搜一搜"
                app:arrowItemTitleColor="@color/blacktitlettwo"
                app:arrowItemTitleSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_invite_set" />

            <com.xunda.mo.main.baseView.MyArrowItemView
                android:id="@+id/item_scan_set"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:arrowItemAvatarHeight="25dp"
                app:arrowItemAvatarSrc="@mipmap/scan_icon"
                app:arrowItemAvatarWidth="25dp"
                app:arrowItemShowAvatar="true"
                app:arrowItemTitle="扫一扫"
                app:arrowItemTitleColor="@color/blacktitlettwo"
                app:arrowItemTitleSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_search_set" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>