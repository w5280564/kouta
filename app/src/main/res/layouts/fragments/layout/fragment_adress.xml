    <com.xunda.mo.pinyin.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bef9b81b"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="请输入关键字"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:textSize="15sp"
        android:visibility="gone" />


<!--    <com.xunda.mo.xrecycle.XRecyclerView-->
<!--        android:id="@+id/All_XRecy"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@id/seek_lin" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/All_XRecy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/seek_lin"/>

    <com.xunda.mo.pinyin.WaveSideBar
        android:id="@+id/sideBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="100dp"
        android:layout_below="@id/seek_lin"
        android:foregroundGravity="center_vertical"
        app:backgroundColor="@color/yellowfive"
        app:chooseTextColor="@android:color/white"
        app:circleRadius="24dp"
        app:hintTextSize="22sp"
        app:radius="20dp"
        app:textColor="@color/greytwo"
        app:textSize="10sp"
        tools:ignore="SmallSp" />



</RelativeLayout>