<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Fragment_Person">


    <ImageView
        android:id="@+id/person_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="57.5dp"
        android:src="@mipmap/zanicon_img" />

    <LinearLayout
        android:id="@+id/name_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/person_img"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/person_img"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audrey Hepburn"
            android:textColor="@color/yellowfive"
            android:textSize="18sp" />

        <TextView
            android:layout_width="29dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="VIP"
            android:textColor="@color/vipred"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_lin"
        android:layout_alignStart="@id/name_lin"
        android:text="Le ID:520520"
        android:textColor="@color/yellowfive"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_txt"
        android:layout_alignStart="@id/name_lin"
        android:text="Le ID:520520"
        android:textColor="@color/yellowfive"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/person_arrow" />

    <ImageView
        android:id="@+id/qrcode_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/arrow_img"
        android:src="@mipmap/person_qrcode" />

    <LinearLayout
        android:id="@+id/quan_lin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/person_img"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:src="@mipmap/person_coupon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我的优惠券"
                android:textColor="@color/blacktitlettwo"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/greyline" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="22dp"
                android:src="@mipmap/person_rating" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我的等级"
                android:textColor="@color/blacktitlettwo"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/greyline" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:src="@mipmap/person_collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我的优惠券"
                android:textColor="@color/blacktitlettwo"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/quan_lin"
        android:background="@color/greyfive" />



            <RelativeLayout
                android:id="@+id/person_shop_rel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/line_view"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/person_shop_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/person_shop_img"
                    android:text="乐小呗商城"
                    android:textColor="@color/blacktitlettwo"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyline" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/person_servise_rel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/person_invitation_rel"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/person_servise_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_servise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/person_servise_img"
                    android:text="客服"
                    android:textColor="@color/blacktitlettwo"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyline" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/person_vip_rel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/person_shop_rel"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/person_vip_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_vip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/person_vip_img"
                    android:text="VIP尊享"
                    android:textColor="@color/blacktitlettwo"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyline" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/person_invitation_rel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/person_vip_rel"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/person_invitation_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_invitation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/person_invitation_img"
                    android:text="邀新有奖"
                    android:textColor="@color/blacktitlettwo"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyline" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/person_help_rel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/person_servise_rel"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/person_help_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/person_help_img"
                    android:text="帮助&amp;关于"
                    android:textColor="@color/blacktitlettwo"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyline" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/person_set_rel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/person_help_rel"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/person_set_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/person_set_img"
                    android:text="设置"
                    android:textColor="@color/blacktitlettwo"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/person_arrow" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/person_set_rel"
                android:background="@color/greyline" />



</RelativeLayout>