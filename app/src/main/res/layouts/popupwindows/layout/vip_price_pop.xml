<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="375dp"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/price_Con"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:background="@drawable/vip_price_selector"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp">

        <ImageView
            android:id="@+id/vip_lab"
            android:layout_width="38dp"
            android:layout_height="32dp"
            android:src="@mipmap/vip_tui_icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/price_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="￥100"
            android:textColor="#fff53636"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/originalCost_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100"
            android:textStyle="bold"
            android:textColor="#ffa1a1a1"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/price_Txt"
            app:layout_constraintStart_toStartOf="@+id/price_Txt"
            app:layout_constraintTop_toBottomOf="@+id/price_Txt" />

        <TextView
            android:id="@+id/month_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1个月"
            android:textColor="#ff444444"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>