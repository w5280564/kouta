<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/friend_rel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/friend_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/adress_head_friend" />

        <TextView
            android:id="@+id/friend_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/friend_img"
            android:text="新朋友"
            android:textColor="@color/blacktitle"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@id/friend_txt"
            android:layout_alignParentBottom="true"
            android:background="@color/greyline" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chat_rel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/chat_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/adress_head_chat" />

        <TextView
            android:id="@+id/chat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/chat_img"
            android:text="群聊"
            android:textColor="@color/blacktitle"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@id/chat_txt"
            android:layout_alignParentBottom="true"
            android:background="@color/greyline" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/group_rel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/group_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/adress_head_group" />

        <TextView
            android:id="@+id/group_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/group_img"
            android:text="好友分组"
            android:textColor="@color/blacktitle"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@id/group_txt"
            android:layout_alignParentBottom="true"
            android:background="@color/greyline" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filetransport_rel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/filetransport_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/adress_head_file" />

        <TextView
            android:id="@+id/filetransport_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/filetransport_img"
            android:text="文件传输助手"
            android:textColor="@color/blacktitle"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@id/filetransport_txt"
            android:layout_alignParentBottom="true"
            android:background="@color/greyline" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/service_rel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/service_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/adress_head_service" />

        <TextView
            android:id="@+id/service_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/service_img"
            android:text="Mo客服"
            android:textColor="@color/blacktitle"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@id/service_txt"
            android:layout_alignParentBottom="true"
            android:background="@color/greyline" />
    </RelativeLayout>




</LinearLayout>