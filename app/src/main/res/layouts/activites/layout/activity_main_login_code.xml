<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".main.login.MainLogin_Code"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/icon_Img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/title_Include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/mo_icon" />

    <TextView
        android:id="@+id/code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_Img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="验证码已发送到手机"
        android:textColor="@color/blacktitlettwo"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/phone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="+17755640406"
        android:textColor="@color/greytwo"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/four_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_txt"
        android:layout_marginLeft="15dp"
        android:text="4位数字验证码"
        android:textColor="@color/greytwo"
        android:textSize="14sp" />

    <com.xunda.mo.staticdata.TimerTextView
        android:id="@+id/timer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/four_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="获取验证码"
        android:textColor="@color/yellowthree"
        android:textSize="14sp" />

    <com.xunda.mo.staticdata.CaptchaInputView
        android:id="@+id/capt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/four_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nonecode_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:visibility="gone"
        android:text="无法接收验证码？"
        android:textColor="@color/yellowfour"
        android:textSize="14sp" />


</RelativeLayout>