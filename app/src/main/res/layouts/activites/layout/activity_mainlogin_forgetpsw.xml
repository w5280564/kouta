<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.login.MainLogin_ForgetPsw_OrQuestion"
    android:focusableInTouchMode="true"
    android:focusable="true">


    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/forget_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="60dp"
        android:text="请输入完整手机号码"
        android:textColor="@color/blacktitle"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_txt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="为保护您的账号安全，请您输入完整的手机号码：\n"
        android:textColor="@color/blacktitle"
        android:textSize="12sp" />



    <RelativeLayout
        android:id="@+id/phonerel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_txt"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <ImageView
            android:id="@+id/login_phone"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@mipmap/login_phone_img" />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/login_phone"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:textColor="@color/greytwo"
            android:textColorHint="@color/greytwo"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/fork_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/login_fork_img" />
    </RelativeLayout>


    <View
        android:id="@+id/lineone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/phonerel"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/greyline" />

    <Button
        android:id="@+id/num_Btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/lineone"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/loginbtn_radius"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>