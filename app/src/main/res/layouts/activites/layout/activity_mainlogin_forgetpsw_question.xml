<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.login.MainLogin_ForgetPsw_Question"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/ques_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_Include"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="10dp"
        android:text="请选择并回答密保问题"
        android:textColor="@color/greytwo"
        android:textSize="12sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/question_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ques_txt"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>