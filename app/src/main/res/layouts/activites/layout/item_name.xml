<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:orientation="vertical"
    android:paddingStart="15sp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head_simple"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        app:roundedCornerRadius="9dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/head_simple"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktitlettwo"
                android:textSize="14sp"
                tools:text="名字" />

            <TextView
                android:id="@+id/vipType_txt"
                android:layout_width="29dp"
                android:layout_height="14dp"
                android:layout_marginStart="10dp"
                android:background="@color/yellow"
                android:gravity="center"
                android:text="VIP"
                android:textColor="@color/vipred"
                android:textSize="10sp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/greytwo"
            android:textSize="12sp"
            tools:text="状态" />

    </LinearLayout>

</RelativeLayout>