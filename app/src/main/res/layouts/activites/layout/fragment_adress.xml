<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Fragment_adress">


    <TextView
        android:id="@+id/person_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="联系人"
        android:textColor="@color/blacktitle"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/more_img"
        android:layout_width="18dp"
        android:layout_height="3dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/remingLin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/person_txt"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:id="@+id/choiceScro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/choiceLin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <EditText
            android:id="@+id/seek_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:paddingLeft="15dp"
            android:textSize="12sp" />
    </LinearLayout>


    <!--    <com.example.kouta.pinyin.HeaderListView-->
    <!--        android:id="@+id/friendList"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_below="@id/remingLin"-->
    <!--        android:fadingEdge="none"-->
    <!--        android:scrollbars="none" />-->

    <!--    <com.example.kouta.pinyin.AssortView-->
    <!--        android:id="@+id/assort"-->
    <!--        android:layout_width="30dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentEnd="true"-->
    <!--        android:layout_centerVertical="true"-->
    <!--        android:layout_marginBottom="50dp"-->
    <!--        android:background="@null" />-->


    <com.example.kouta.pinyin.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bef9b81b"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="请输入关键字"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:textSize="15dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.example.kouta.pinyin.WaveSideBar
        android:id="@+id/sideBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="100dp"
        app:backgroundColor="@color/yellowfive"
        app:chooseTextColor="@android:color/white"
        app:circleRadius="24dp"
        app:hintTextSize="22sp"
        app:radius="20dp"
        app:textColor="@color/greytwo"
        app:textSize="10sp" />


</RelativeLayout>