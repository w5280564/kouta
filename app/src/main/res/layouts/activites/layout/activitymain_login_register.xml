<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.login.MainLogin_Register">

    <ImageView
        android:id="@+id/icon_Img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/mo_icon" />

    <TextView
        android:id="@+id/phone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_Img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="欢迎使用"
        android:textColor="@color/blacktitle"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="一款最安全的通讯应用！所有信息都是通过端对端加密处理，您可以随时随地畅聊"
        android:textColor="@color/greytwo"
        android:textSize="14sp" />

    <Button
        android:id="@+id/regster_Btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/loginbtn_radius"
        android:text="注册新账号"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_Btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@id/regster_Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/loginbtn_radius"
        android:text="登录"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>