<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/icon_Img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/mo_icon" />

    <TextView
        android:id="@+id/phone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_Img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="+86  "
        android:textColor="@color/greytwo"
        android:textSize="14sp" />

    <Button
        android:id="@+id/num_Btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/phone_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/loginbtn_radius"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/psw_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_Btn"
        android:layout_marginLeft="15dp"
        android:text="使用密码登录"
        android:textColor="@color/greytwo"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/more_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:text="更多操作"
        android:textColor="@color/greytwo"
        android:textSize="12sp" />

</RelativeLayout>